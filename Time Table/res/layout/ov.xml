<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ov"
    android:gravity="center_horizontal"
    android:orientation="vertical"
     >

    <TextView
        android:id="@+id/tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thank you for using Spider&apos;s Lecture scheduler"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25dp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scroll"
        android:padding="15dp"
        android:paddingTop="20dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dispb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/purewhite"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/dev"
                android:onClick="mail"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect with me online"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp" >

                <Button
                    android:id="@+id/fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/fb"
                    android:onClick="mail"
                    android:text="@string/empty" />

                <Button
                    android:id="@+id/blog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/blog"
                    android:onClick="mail"
                    android:text="@string/empty" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>